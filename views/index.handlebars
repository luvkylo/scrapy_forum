<div class="container">
    <div class="jumbotron">
        <h1 class="display-4">Hello, world!</h1>
        <p class="lead">Scraping the Reddit for a variety of world news. Join the community and comment on the news!</p>
        <a class="btn btn-primary btn-lg discover" href="#" role="button">Start Discovering!</a>
    </div>

    <div class="loading">
        <div class="alert alert-info noNews" role="alert" style="display: none;">
            <strong> Sorry!</strong> No new news!
        </div>
    </div>
    
    <br>
    <div class="list-group list-group-flush">
        {{#each articles}}
        <div class="row">
            <a href="{{this.url}}" class="list-group-item list-group-item-action col-9">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">{{this.headline}}</h5>
                </div>
                <p class="mb-1">Most Upvoted comment:</p>
                <p class="mb-1">{{this.summary}}</p>
            </a>
            <div class="list-group-item col-3">
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#articleModal" data-id="{{this._id}}">Add Comment</button>
            </div>
        </div>
        {{/each}}
    </div>

    <div class="modal fade" id="articleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Comment</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="message-text" class="col-form-label">Comment:</label>
                            <textarea class="form-control" id="comment-text"></textarea>
                        </div>
                        <button type="button" class="btn btn-secondary clear">Clear</button>
                        <button type="button" class="btn btn-primary addComment">Add Comment</button>
                    </form>
                </div>
                <div class="modal-footer">
                    <ul class="modal-list list-group list-group-flush"></ul>
                </div>
            </div>
        </div>
    </div>
</div>